{{!-- Total amount --}}
<div class="row align-items-center">
  <div class="col-4 offset-4">
    <h5 class="my-0">總金額: </h5>
    <p class="display-4 text-right text-info">{{ totalAmount }}</p>
  </div>
</div>

{{!-- records --}}
<div class="row align-items-center">
  <div class="col-8 offset-4">
    <table class="table table-striped">
      <tbody>
        {{#each records}}
        <tr>
          <th>
            <div class="row align-items-center">
              <div class="col-2">
                <span style="font-size: 3em"><i class='{{getIcon this.category ../CATEGORY}}'></i></span>
              </div>
              <div class="col-8">
                <h5>{{ this.name }}</h5>
                <small>{{ this.date }}</small>
              </div>
              <div class="col-2">
                <h5>{{ this.amount }}</h5>
              </div>
            </div>
          </th>
          <td class="align-middle">
            <a href="/records/{{ this._id }}/edit">修改</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>

