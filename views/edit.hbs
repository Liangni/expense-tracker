<div class="row">
  <div class="col-6 mx-auto mt-3">
    <div class="row mb-3">
      <div class="col-3"><small class="text-danger mr-5">*必填欄位</small></div>
      <div class="col-9">
        <h5>請輸入你的支出</h5>
      </div>
    </div>

    <form action="/records/{{record._id}}/edit", method="POST">
      <div class="form-group">
        <label for="name">名稱*: </label>
        <input type="text" class="form-control" id="name" name="name"value="{{record.name}}">
      </div>
      <div class="form-group">
        <label for="date">日期*: </label>
        <input type="date" class="form-control" id="date" name="date" value="{{record.date}}">
      </div>
      <div class="form-group">
        <label for="category">類別*: </label>
        <select name="category" class="form-control" id="category">
          <option value="交通出行"{{#if (isCategory record.category '交通出行') }}selected{{/if}}>交通出行</option>
          <option value="家居物業" {{#if (isCategory record.category '家居物業') }}selected{{/if}}>家居物業</option>
          <option value="休閒娛樂"{{#if (isCategory record.category '休閒娛樂') }}selected{{/if}}>休閒娛樂</option>
          <option value="餐飲食品"{{#if (isCategory record.category '餐飲食品') }}selected{{/if}}>餐飲食品</option>
          <option value="其他"{{#if (isCategory record.category '其他') }}selected{{/if}}>其他</option>
        </select>
      </div>
      <div class="form-group">
        <label for="amount">金額*: </label>
        <input type="number" class="form-control" id="amount" name="amount" value="{{record.amount}}">
      </div>
      <button type="submit" class="btn btn-primary">修改支出</button>
    </form>

  </div>
</div>